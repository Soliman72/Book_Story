<h6>Dashboard</h6>
<h2>welcome {{name}}</h2>
<p>here are your story</p>

{{#if stories}}
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each stories}}
      <tr>
        <td><a href="/stories/{{_id}}">{{title}}</a></td>      
        <td>{{formatDate createdAt 'MMMM DO YYYY , h:mm:ss a'}}</td>    
        <td> <span class="dash-status">{{status}}</span> </td>
        <td>
          <a href="stories/edit/{{_id}}" class="btn btn-float">
            <i class="fas fa-edit"></i>
          </a>
          <form action="stories/{{_id}}" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn red">
              <i class="fas fa-trash"></i>
            </button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p>you not have stories yet</p>
{{/if}}
